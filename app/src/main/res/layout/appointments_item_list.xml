<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pictureView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="45dp">

        <ImageView
            android:id="@+id/appointmentUserPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/appointmentUserNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/pictureView"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appointmentDateTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointmentUserNameTv"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/pictureView"
        android:text="Date | Time"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/petID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointmentDateTimeTv"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/pictureView"
        android:text="Pet ID:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/appointmentPetIdTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointmentDateTimeTv"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/petID"
        android:text="#"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nighty"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".AddRecord">

    <LinearLayout
        android:id="@+id/pinkHeader"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/pink"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/addRecordBackIv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1.35"
            android:onClick="back"
            android:src="@drawable/ic_round_arrow_back_ios_24"
            app:tint="@color/whitey"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/headerTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:paddingStart="30dp"
            android:text="Add Record"
            android:textColor="@color/whitey"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- delete icon-->
        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1.35"
            android:onClick="onPressedDelete"
            android:src="@drawable/ic_baseline_delete_forever_24"
            app:tint="@color/whitey"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/lightgray"
                        android:foreground="@drawable/ic_round_add_24"
                        android:foregroundGravity="center"
                        android:foregroundTint="@color/textgray"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/addRecordPicIv1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="onPressedPhoto"
                            android:scaleType="centerCrop"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/lightgray"
                        android:foreground="@drawable/ic_round_add_24"
                        android:foregroundGravity="center"
                        android:foregroundTint="@color/textgray"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/addRecordPicIv2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="onPressedPhoto"
                            android:scaleType="centerCrop"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/lightgray"
                        android:foreground="@drawable/ic_round_add_24"
                        android:foregroundGravity="center"
                        android:foregroundTint="@color/textgray"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:id="@+id/addRecordPicIv3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="onPressedPhoto"
                            android:scaleType="centerCrop"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.08"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TYPE"
                        android:textAlignment="center"
                        android:textColor="@color/textgray"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/typeToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:saveEnabled="true"
                        app:selectionRequired="true"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addDogChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:onClick="onPressedDog"
                            android:text="DOG"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addCatChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:onClick="onPressedCat"
                            android:text="CAT"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.08"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GENDER"
                        android:textAlignment="center"
                        android:textColor="@color/textgray"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/genderToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:saveEnabled="true"
                        app:selectionRequired="true"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addMaleChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="MALE"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addFemaleChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="FEMALE"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.08"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AGE"
                        android:textAlignment="center"
                        android:textColor="@color/textgray"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ageToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:saveEnabled="true"
                        app:selectionRequired="true"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addPuppyChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="PUPPY"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addYoungChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="YOUNG"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addOldChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="OLD"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.08"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SIZE"
                        android:textAlignment="center"
                        android:textColor="@color/textgray"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/sizeToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:saveEnabled="true"
                        app:selectionRequired="true"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addSmallChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="SMALL"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addMediumChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="MEDIUM"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addLargeChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="LARGE"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.95"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COLOR"
                        android:textAlignment="center"
                        android:textColor="@color/textgray"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/colorToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:saveEnabled="true"
                        app:selectionRequired="true"
                        app:singleLine="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addBlackChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="BLACK"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addBrownChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="BROWN"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addCreamChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="CREAM"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addWhiteChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="WHITE"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addOrangeChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="ORANGE"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/addGrayChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:text="GRAY"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.95"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DISTINGUISHING MARKS"
                        android:textAlignment="center"
                        android:textColor="@color/textgray"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/addMarks"
                        style="@style/textField_style"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="start"
                        android:paddingTop="15dp"
                        android:hint="Distinguishing Marks"
                        android:inputType="textMultiLine"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.95"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="RESCUED DATE"
                        android:textAlignment="center"
                        android:textColor="@color/textgray"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:onClick="onPressedRescuedDate"
                        android:id="@+id/addRescuedDate"
                        style="@style/textField_style"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.7"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="00/00/0000"
                        android:inputType="date"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/saveRecordBtn"
                        style="@style/pinkButton_style"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:onClick="onPressedSave"
                        android:text="SAVE RECORD" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
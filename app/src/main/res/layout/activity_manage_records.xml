<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mrecordRefresher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nighty"
    android:orientation="vertical"
    tools:context=".ManageRecords">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pinkHeader"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/pink"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/recordsBackIv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1.35"
                android:onClick="back"
                android:src="@drawable/ic_round_arrow_back_ios_24"
                app:tint="@color/whitey"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingStart="30dp"
                android:text="Records"
                android:textColor="@color/whitey"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/filterIv"
                android:onClick="onPressedFilter"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1.35"
                android:src="@drawable/ic_baseline_filter_alt_24"
                app:tint="@color/whitey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkerNighty"
                android:paddingEnd="7.5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/lightgray"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/recordsAddTile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="onPressedAddRecord"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_round_add_24"
                        app:tint="@color/orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Add Record"
                        android:textColor="@color/gray"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="7.5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkerNighty"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/lightgray"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/recordsCreateReportTile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="onPressedCreateReports"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_round_file_copy_24"
                        app:tint="@color/orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Create Reports"
                        android:textColor="@color/gray"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkerNighty"
            app:cardCornerRadius="12dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/lightgray"
            app:strokeWidth="1dp">

            <LinearLayout
                android:id="@+id/filterLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingHorizontal="5dp"
                android:weightSum="3">

                <Spinner
                    android:id="@+id/filterTypeSp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:alpha="0.2"/>

                <Spinner
                    android:id="@+id/filterGenderSp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:alpha="0.2"/>


                <Spinner
                    android:id="@+id/filterAgeSp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recordsRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp" />

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
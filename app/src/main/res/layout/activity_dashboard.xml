<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardRefresher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nighty"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/headerView"
            layout="@layout/activity_header"
            tools:ignore="IncludeLayoutParam" />

        <com.google.android.material.card.MaterialCardView
            style="@style/CustomCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/darkerNighty">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Dashboard"
                    android:textColor="@color/gray"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/nighty"
                            app:cardCornerRadius="20dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/requestsDot"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:backgroundTint="@color/red"
                                    app:cardCornerRadius="100dp" />

                                <LinearLayout
                                    android:id="@+id/requestsPad"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:onClick="onPressedRequests"
                                    android:orientation="vertical"
                                    android:paddingVertical="25dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:src="@drawable/icon_request" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="20dp"
                                        android:text="Requests"
                                        android:textAlignment="center"
                                        android:textColor="@color/gray"
                                        android:textSize="17dp" />

                                </LinearLayout>

                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/nighty"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:id="@+id/manageRecordsPad"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:onClick="onPressedManageRecords"
                                android:orientation="vertical"
                                android:paddingVertical="25dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:src="@drawable/icon_records" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="20dp"
                                    android:text="Manage\nRecords"
                                    android:textAlignment="center"
                                    android:textColor="@color/gray"
                                    android:textSize="17dp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/nighty"
                            app:cardCornerRadius="20dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/appointmentsDot"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:backgroundTint="@color/red"
                                    app:cardCornerRadius="100dp" />

                                <LinearLayout
                                    android:id="@+id/appointmentsPad"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:onClick="onPressedAppointment"
                                    android:orientation="vertical"
                                    android:paddingVertical="25dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:src="@drawable/icon_appointments" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="20dp"
                                        android:text="Appointments"
                                        android:textAlignment="center"
                                        android:textColor="@color/gray"
                                        android:textSize="17dp" />

                                </LinearLayout>

                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/nighty"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:id="@+id/manageAccountsPad"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:onClick="onPressedManageAccounts"
                                android:orientation="vertical"
                                android:paddingVertical="25dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:src="@drawable/icon_accounts" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="20dp"
                                    android:text="Manage\nAccounts"
                                    android:textAlignment="center"
                                    android:textColor="@color/gray"
                                    android:textSize="17dp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="2"
                        android:backgroundTint="@color/nighty"
                        android:elevation="10dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/adminFnameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.8"
                                android:gravity="start"
                                android:text="Admin"
                                android:textColor="@color/gray"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/logoutTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.2"
                                android:gravity="end"
                                android:onClick="onPressedLogout"
                                android:text="LOGOUT"
                                android:textColor="@color/pink"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
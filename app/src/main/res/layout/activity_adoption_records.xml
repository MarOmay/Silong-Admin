<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".AdoptionRecords">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pinkHeader"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/pink"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:weightSum="4">

            <ImageView
                android:id="@+id/createReportBackIv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1.2"
                android:onClick="back"
                android:src="@drawable/ic_round_arrow_back_ios_24"
                app:tint="@color/whitey"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingStart="30dp"
                android:text="Adoption Records"
                android:textColor="@color/whitey"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logDateRange"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1.2"
                android:src="@drawable/date_range"
                android:onClick="onDateRangePressed"
                app:tint="@color/whitey"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageView
                android:onClick="onPressedExport"
                android:id="@+id/adoptionExport"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1.2"
                android:src="@drawable/export_icon"
                app:tint="@color/whitey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <!--REQUESTS PIE CHART-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Adoption Requests"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:backgroundTint="@color/graphBg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.silong.CustomView.CustomPieChart
                        android:id="@+id/requestsPieChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp"
                        android:gravity="center"
                        android:text="Requests"
                        android:textColor="@color/blacky"
                        android:textSize="14sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--PET DEMOGRAPHICS HORIZONTAL BAR CHART-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp"
                android:text="Pet Demographics (Adopted)"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:backgroundTint="@color/graphBg">

                <com.silong.CustomView.CustomBarGraph
                    android:id="@+id/petDemogBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <!--OWNER DEMOGRAPHICS HORIZONTAL BAR CHART-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp"
                android:text="Owner Demographics"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:backgroundTint="@color/graphBg">

                <com.silong.CustomView.CustomBarGraph
                    android:id="@+id/ownerDemogBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>